[general]
accounts = personal,work
pythonfile = ~/.offlineimap.py

[Account personal]
localrepository = personal_local
remoterepository = personal_remote
quick = 10

[Repository personal_local]
type = Maildir
localfolders = ~/Mail/personal
readonly = no
sync_deletes = no

[Repository personal_remote]
type = IMAP
remoteport = 993
remotehost = imap.mailbox.org
remoteuser = m@gszr.org
remotepasseval = get_password("personal")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
maxconnections = 5
readonly = no


[Account work]
localrepository = work_local
remoterepository = work_remote
quick = 10

[Repository work_local]
type = Maildir
localfolders = ~/Mail/work
readonly = no
sync_deletes = no

[Repository work_remote]
type = IMAP
remoteport = 993
remotehost = imap.gmail.com
remoteuser = gs@konghq.com
remotepasseval = get_password("work")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
maxconnections = 5
readonly = no
