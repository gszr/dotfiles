# i3status configuration file

general {
	output_format = "i3bar"
	colors    = true
	interval  = 2
}

order += "brightness"
order += "volume master"
order += "wireless wlan0"
order += "battery 0"
order += "tztime local"

wireless wlan0 {
	format_up   = " W: %ip "
	format_down = " W: down "
}

ethernet enp0s31f6 {
	format_up   = " E: %ip "
	format_down = " E: down "
}

battery 0 {
	format = "%status %percentage %remaining "
	path   = "/sys/class/power_supply/BAT0/uevent"
	status_chr  = "  CHR"
	status_bat  = "  BAT"
	status_full = " ☻ FULL"
	hide_seconds = true
	integer_battery_capacity = true
}

volume master {
	format = " ♪ %volume "
	device = "pulse"
}

tztime local {
	format = "  %H:%M %m-%d-%y "
}
