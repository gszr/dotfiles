# vim: ft=muttrc

set signature = ~/.mutt/w_sig
set sendmail = "msmtp -a work"
set folder = "~/.mail/work"
set spoolfile = "+Inbox"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"
set mbox = "+[Gmail]/All Mail"

unmailboxes *
mailboxes +Inbox +[Gmail]/Drafts +[Gmail]/Sent\ Mail +[Gmail]/Trash +[Gmail]/All\ Mail

macro index F '<shell-escape>echo "Syncing work mail..."; mbsync work<enter>'
macro index,pager a "<save-message>+[Gmail]/All Mail<enter><enter>" "Archive"

folder-hook . "exec collapse-all"

